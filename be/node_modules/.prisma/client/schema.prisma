generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model amenities {
  id              String            @id @db.VarChar(50)
  name            String            @db.VarChar(100)
  scope_id        String?           @db.VarChar(50)
  amenity_scopes  amenity_scopes?   @relation(fields: [scope_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "amenities_ibfk_1")
  hotel_amenities hotel_amenities[]
  room_amenities  room_amenities[]

  @@index([scope_id], map: "scope_id")
}

model amenity_scopes {
  id        String      @id @db.VarChar(50)
  name      String      @unique(map: "name") @db.VarChar(50)
  amenities amenities[]
}

model bookings {
  id              String    @id @db.VarChar(50)
  user_id         String?   @db.VarChar(50)
  hotel_id        String?   @db.VarChar(50)
  payment_mode_id String?   @db.VarChar(50)
  check_in        DateTime  @db.Date
  check_out       DateTime  @db.Date
  total_price     Decimal   @db.Decimal(10, 2)
  status          String    @db.VarChar(20)
  transaction_id  String?   @db.VarChar(100)
  expires_at      DateTime? @db.DateTime(0)

  users         users?         @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "bookings_ibfk_1")
  hotels        hotels?        @relation(fields: [hotel_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "bookings_ibfk_2")
  payment_modes payment_modes? @relation(fields: [payment_mode_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "bookings_ibfk_5")

  booking_rooms booking_rooms[]
  reviews       reviews[]
  guest_details guest_details[]

  @@index([hotel_id], map: "hotel_id")
  @@index([payment_mode_id], map: "payment_mode_id")
  @@index([user_id], map: "user_id")
}

model booking_rooms {
  id           String     @id @db.VarChar(50)
  booking_id   String     @db.VarChar(50)
  room_type_id String     @db.VarChar(50)
  quantity     Int        @default(1)
  price        Decimal    @db.Decimal(10, 2)
  bookings     bookings   @relation(fields: [booking_id], references: [id], onDelete: Cascade, map: "booking_rooms_ibfk_1")
  room_types   room_types @relation(fields: [room_type_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "booking_rooms_ibfk_2")

  @@index([booking_id], map: "booking_id")
  @@index([room_type_id], map: "room_type_id")
}

model guest_details {
  id         String  @id @db.VarChar(50)
  booking_id String? @db.VarChar(50)
  name       String  @db.VarChar(100)
  phone      String? @db.VarChar(20)
  email      String? @db.VarChar(100)

  bookings bookings? @relation(fields: [booking_id], references: [id], onDelete: Cascade, map: "guest_details_ibfk_1")

  @@index([booking_id], map: "booking_id")
}

model hotels {
  id              String            @id @db.VarChar(50)
  name            String            @db.VarChar(100)
  city            String            @db.VarChar(50)
  address         String            @db.Text
  description     String?           @db.Text
  rating          Decimal?          @default(0.0) @db.Decimal(3, 1)
  lowest_price    Decimal?          @db.Decimal(10, 2)
  images          String?           @db.Text
  bookings        bookings[]
  hotel_amenities hotel_amenities[]
  hotel_managers  hotel_managers[]
  reviews         reviews[]
  room_types      room_types[]
}

model hotel_amenities {
  hotel_id   String    @db.VarChar(50)
  amenity_id String    @db.VarChar(50)
  hotels     hotels    @relation(fields: [hotel_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "hotel_amenities_ibfk_1")
  amenities  amenities @relation(fields: [amenity_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "hotel_amenities_ibfk_2")

  @@id([hotel_id, amenity_id])
  @@index([amenity_id], map: "amenity_id")
}

model hotel_managers {
  hotel_id  String   @db.VarChar(50)
  user_id   String   @db.VarChar(50)
  is_active Boolean? @default(true)
  hotels    hotels   @relation(fields: [hotel_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "hotel_managers_ibfk_1")
  users     users    @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "hotel_managers_ibfk_2")

  @@id([hotel_id, user_id])
  @@index([user_id], map: "user_id")
}

model payment_modes {
  id       String     @id @db.VarChar(50)
  name     String     @unique(map: "name") @db.VarChar(50)
  bookings bookings[]
}

model reviews {
  id           String    @id @db.VarChar(50)
  hotel_id     String?   @db.VarChar(50)
  user_id      String?   @db.VarChar(50)
  booking_id   String?   @db.VarChar(50)
  rating       Int?
  comment      String?   @db.Text
  date_created DateTime? @default(now()) @db.DateTime(0)
  hotels       hotels?   @relation(fields: [hotel_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "reviews_ibfk_1")
  users        users?    @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "reviews_ibfk_2")
  bookings     bookings? @relation(fields: [booking_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "reviews_ibfk_3")

  @@index([booking_id], map: "booking_id")
  @@index([hotel_id], map: "hotel_id")
  @@index([user_id], map: "user_id")
}

model roles {
  id    String  @id @db.VarChar(50)
  name  String  @unique(map: "name") @db.VarChar(50)
  users users[]
}

model room_amenities {
  room_type_id String     @db.VarChar(50)
  amenity_id   String     @db.VarChar(50)
  room_types   room_types @relation(fields: [room_type_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "room_amenities_ibfk_1")
  amenities    amenities  @relation(fields: [amenity_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "room_amenities_ibfk_2")

  @@id([room_type_id, amenity_id])
  @@index([amenity_id], map: "amenity_id")
}

model room_types {
  id              String  @id @db.VarChar(50)
  hotel_id        String? @db.VarChar(50)
  name            String  @db.VarChar(100)
  price           Decimal @db.Decimal(10, 2)
  capacity        Int
  total_inventory Int
  images          String? @db.Text

  booking_rooms  booking_rooms[]
  room_amenities room_amenities[]
  hotels         hotels?          @relation(fields: [hotel_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "room_types_ibfk_1")

  @@index([hotel_id], map: "hotel_id")
}

model users {
  id             String           @id @db.VarChar(50)
  name           String           @db.VarChar(100)
  email          String           @unique(map: "email") @db.VarChar(100)
  password_hash  String           @db.VarChar(255)
  phone          String?          @db.VarChar(20)
  role_id        String?          @db.VarChar(50)
  refresh_token  String?          @db.VarChar(500)
  access_token   String?          @db.VarChar(500)
  bookings       bookings[]
  hotel_managers hotel_managers[]
  reviews        reviews[]
  roles          roles?           @relation(fields: [role_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "users_ibfk_1")

  @@index([role_id], map: "role_id")
}
